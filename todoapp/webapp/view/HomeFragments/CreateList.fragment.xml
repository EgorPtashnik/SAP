<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f" xmlns:card="sap.f.cards">
  <f:GridListItem class="sapUiTinyMargin">
    <f:Card>
      <f:header>
        <card:Header
          title="{i18n>newListTitle}"
          subtitle="{i18n>newListSubtitle}"
          iconSrc="sap-icon://write-new"/>
      </f:header>
      <f:content>
        <VBox class="sapUiTinyMargin" width="100%">
          <Input placeholder="{i18n>listName}" width="100%"/>
        </VBox>
      </f:content>
    </f:Card>
  </f:GridListItem>
</core:FragmentDefinition>
