<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f" xmlns:grid="sap.ui.layout.cssgrid">
  <Panel>
    <f:GridList id="ToDoListContainer" visible="{=!${store>/todo/isFetching}}">
      <f:headerToolbar>
        <Toolbar>
          <ToolbarSpacer/>
          <Button type="Emphasized" text="{i18n>createList}" press="handleCreateNewList"/>
        </Toolbar>
      </f:headerToolbar>
      <f:customLayout>
				<grid:GridBoxLayout boxWidth="300px" />
			</f:customLayout>
    </f:GridList>
  </Panel>
    <VBox id="busyIndicatorContainer" visible="{store>/todo/isFetching}" width="100%" height="100%"
        justifyContent="Center" alignItems="Center">
        <BusyIndicator text="{i18n>fetchingData}" id="todoListFetchingIndicator"/>
    </VBox>
</core:FragmentDefinition>
