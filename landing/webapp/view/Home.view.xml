<mvc:View controllerName="yp.landing.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="homeVBoxMain" class="sapUiResponsiveMargin">
                <HBox id="homeHBoxAcatar">
                    <Avatar id="homeAvatar"
                        src="img/avatar.png"
                        displaySize="XL">
                        <detailBox>
                            <LightBox id="homeAvatarBig">
                                <LightBoxItem id="homeAvatarBigItem"
                                    imageSrc="img/avatar.png"
                                    title="{i18n>avatarTitle}"
                                    subtitle="{i18n>avatarDescription}">
                                </LightBoxItem>
                            </LightBox>
                        </detailBox>
                    </Avatar>
                </HBox>
                <Panel id="homeSkillsTablePanel" class="sapUiTinyMarginTop" headerText="{i18n>techSkills}" expandable="true" expanded="true">
                    <Table id="homeTechList"
                        items="{store>/PersData/skills}">
                        <columns>
                            <Column id="columnName">
                                <Text id="columnNameText" text="{i18n>skillName}"/>
                            </Column>
                            <Column id="columnLevel">
                                <Text id="columnLevelText" text="{i18n>skillLevel}"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="skillItem">
                                <cells>
                                    <ObjectIdentifier id="skillNameColumn" title="{store>name}"
                                        titleActive="true" titlePress="onSkillNamePress" text="{store>description}"/>
                                    <Text id="skillLevelColumn" text="{store>level}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>
