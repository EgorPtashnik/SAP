<mvc:View controllerName="yp.landing.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="homeHBox" class="sapUiResponsiveMargin">
                <Avatar id="homeAvatar"
                    src="img/avatar.png"
                    displaySize="XL">
                    <detailBox>
                        <LightBox id="homeAvatarBig">
                            <LightBoxItem id="homeAvatarBigItem"
                                imageSrc="img/avatar.png"
                                title="{i18n>avatarTitle}"
                                subtitle="{i18n>avatarDescription}">
                            </LightBoxItem>
                        </LightBox>
                    </detailBox>
                </Avatar>
                <Text id="homeDescription" text="{i18n>description}"/>
            </VBox>
        </content>
    </Page>
</mvc:View>
