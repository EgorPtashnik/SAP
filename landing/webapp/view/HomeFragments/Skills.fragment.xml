<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel id="homeSkillsTablePanel" class="sapUiTinyMarginTop" headerText="{i18n>techSkills}" expandable="{=${device>/system/desktop}}" expanded="true">
        <Table id="homeTechList"
            items="{store>/PersData/skills}">
            <columns>
                <Column id="columnName">
                    <Text id="columnNameText" text="{i18n>skillName}"/>
                </Column>
                <Column id="columnLevel" width="20%" hAlign="Center">
                    <Text id="columnLevelText" text="{i18n>skillLevel}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="skillItem">
                    <cells>
                        <ObjectIdentifier id="skillNameColumn" title="{store>name}"
                            titleActive="true" titlePress="onSkillNamePress" text="{store>description}"/>
                        <Text id="skillLevelColumn" text="{store>level}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</core:FragmentDefinition>