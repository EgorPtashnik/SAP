<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <HBox id="homeHBoxAvatar" visible="{device>/system/desktop}">
        <Avatar id="homeAvatar"
            src="../img/avatar.png"
            displaySize="XL">
            <detailBox>
                <LightBox id="homeAvatarBig">
                    <LightBoxItem id="homeAvatarBigItem"
                        imageSrc="../img/avatar.png"
                        title="{i18n>avatarTitle}"
                        subtitle="{i18n>avatarDescription}">
                    </LightBoxItem>
                </LightBox>
            </detailBox>
        </Avatar>
        <VBox id="overviewBox" class="sapUiTinyMarginBegin">
            <Title id="overviewTitle" text="{i18n>overview}"/>
            <Text id="overviewText" text="{i18n>overviewDescription}"/>
            <Text id="overviewText2" text="{i18n>overviewDescription2}"/>
            <HBox id="headerLinksBox" wrap="Wrap">
                <HBox id="githubBox" alignItems="Center" class="sapUiTinyMargin">
                    <Link id="linkGitHub" text="GitHub" href="https://github.com/EgorPtashnik" target="_blank"/>
                    <Image id="githubLogo" class="sapUiTinyMarginBegin" src="../img/githublogo.png" width="20px" height="20px"/>
                </HBox>
                <HBox id="linkedBox" alignItems="Center" class="sapUiTinyMargin">
                    <Link id="linkLinked" text="LinkedIn" href="https://www.linkedin.com/in/egor-ptashnik-1281631b9/" target="_blank"/>
                    <Image id="linkedLogo" class="sapUiTinyMarginBegin" src="../img/linkedlogo.png" width="20px" height="20px"/>
                </HBox>
            </HBox>
        </VBox>
    </HBox>
</core:FragmentDefinition>