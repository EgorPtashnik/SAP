<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.f"
    xmlns:m="sap.m">
    <DynamicPageTitle>
        <heading>
            <m:Title text="Todo List"/>
        </heading>
        <actions>
            <m:ToggleButton enabled="{=${/lists}.length > 0}" pressed="{/deleteMode}" text="Delete Mode"/>
            <m:Button text="Create" press="onOpenCreateDialog"/>
        </actions>
    </DynamicPageTitle>
</core:FragmentDefinition>