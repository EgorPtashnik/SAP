<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.f"
    xmlns:m="sap.m">
    <DynamicPageTitle>
        <heading>
            <m:Title text="Todo List"/>
        </heading>
        <actions>
            <m:Button text="Edit Mode" press="onEdit" visible="{=!${/editMode}}"/>
            <m:Button text="Create List" press="onOpenCreateListDialog" visible="{/editMode}"/>
            <m:Button text="Create Category" press="onOpenCreateCategoryDialog" visible="{/editMode}"/>
        </actions>
    </DynamicPageTitle>
</core:FragmentDefinition>