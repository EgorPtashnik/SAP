<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.f"
    displayBlock="true"
    controllerName="yp.controller.home.Home">
    
    <DynamicPage showFooter="{/editMode}">
        <title>
            <core:Fragment type="XML" fragmentName="yp.view.home.Title"/>
        </title>

        <header>
            <core:Fragment type="XML" fragmentName="yp.view.home.FilterBar"/>
        </header>

        <content>
            <core:Fragment type="XML" fragmentName="yp.view.home.Table"/>
        </content>
    </DynamicPage>

</mvc:View>
