<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Panel>
        <f:SimpleForm editable="true">
            <core:Title text="Add category"/>
            <Label text="New category name"/>
            <Input value="{/create/masterData/category/name}"/>
            <Button text="Add Category" type="Emphasized" press="onCreateCategory"/>   
        </f:SimpleForm>
    </Panel>
    <List items="{config>/TodoListCategories}"
          headerText="List Categories"
          mode="Delete"
          delete="onDeleteCategory">
        <items>
            <InputListItem label="{config>id}">
                <Input value="{config>category}" change="onUpdateCategory"/>
            </InputListItem>
        </items>
    </List>
</core:FragmentDefinition>