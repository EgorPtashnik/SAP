<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
	xmlns:f="sap.ui.layout.form">
    <Dialog title="Create List">
        <content>
            <f:SimpleForm editable="true">
                <Label text="Name"/>
                <Input value="{/create/list/name}"/>
                <Label text="Category"/>
                <Select items="{config>/TodoListCategories}" selectedKey="{/create/list/category_id}" forceSelection="true">
                    <core:Item key="{config>id}" text="{config>category}"/>
                </Select>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Submit" type="Emphasized" press="onSubmitNewList"/>
            <Button text="Cancel" type="Reject" press="onDialogClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>