<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
	xmlns:f="sap.ui.layout.form">
    <Dialog title="Create Category">
        <content>
            <f:SimpleForm editable="true">
                <Label text="Category"/>
                <Input value="{/create/category/name}"/>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Submit" type="Emphasized" press="onSubmitNewCategory"/>
            <Button text="Cancel" type="Reject" press="onDialogClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>