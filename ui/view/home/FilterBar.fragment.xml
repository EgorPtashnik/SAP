<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPageHeader>
        <Toolbar style="Clear">
            <HBox>
                <SearchField value="{/filters/name}" placeholder="search" liveChange="showOverlay" search="onFilter"/>
            </HBox>
            <ToolbarSpacer/>
            <Button text="Go" type="Emphasized" press="onFilter"/>
        </Toolbar>
    </f:DynamicPageHeader>
</core:FragmentDefinition>