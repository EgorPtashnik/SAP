<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Table id="idTodoCategoryItemsTable" 
           items="{todoService>Items}">
        <columns>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Text text="{todoService>name}"/>
                <Text text="{todoService>description}"/>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>