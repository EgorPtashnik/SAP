<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Table items="{todoService>/TodoCategory}">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Add" press="onOpenCreateCategoryDialog"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Category"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Text text="{todoService>name}"/>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>